
@{
    ViewBag.Title = "Index2";
}

<h2>Index2</h2>

<h3>Razor ile karar yapıları</h3>

@{
    string[] names = new string[3] { "Eren", "Emre", "Aysel" };
    int index = 0;

    foreach (string name in names)
    {
        @name
        <br />

    }
    <ul>
        @foreach (string name in names)
        {
            <li>@name</li>
        }
    </ul>
}

<br />
<hr />

<ul>
    @foreach (string name in names)
    {
        <li>
            @if (index % 2 == 0)
            {
                <b>@name</b>
            }
            else
            {
                <i style="color:red; font-size:20px">@name</i>
            }
        </li>
        index++;

    }

</ul>
<br />
<hr />

@for (int i = 0; i < 10; i++)
{
    if (i % 2 == 0)
    {
        <p style="color:blue"> Number is : <span style="color:orangered">@i</span></p>
    }
    else
    {
        <p style="color:blue"> Number is : <span style="color:black">@i</span></p>
    }

    <br />

}

@for (int i = 0; i < 100; i++)
{
    if (i % 2 == 0 && i % 3 == 0)
    {
        <p style="color:blue"> Number is : @i</p>
    }
    else
    {
        <p> Number is : @i</p>
    }
}






